<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0" />
    <title>@ViewData["Title"] - Movex</title>
    <link href="~/lib/bootstrap-4.1.3-dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Movex</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @await Component.InvokeAsync("MenuGenrerComponent")
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="MyMovies" asp-action="Index">Meus Filmes</a>
                        </li>
                    </ul>
                    <form class="form-inline my-2 my-lg-0">
                        <input id="txtSearch" class="form-control mr-sm-2" type="search" placeholder="Pesquisar filme" aria-label="Search">
                        <button id="btnSearch" type="button" class="btn btn-outline-success my-2 my-sm-0">Pesquisar</button>
                        <button id="btnClear" type="button" class="btn btn-danger my-2 my-sm-0" style="display:none;">Limpar</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - Movex - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/block-ui/jquery.block-ui.js"></script>
    <script src="~/lib/bootstrap-4.1.3-dist/js/bootstrap.bundle.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>

        function blockUI() {
            $.blockUI(
                {
                    message: '<h1><img src="../img/loading.gif"/></h1>',
                    css: { backgroundColor: 'transparent', border: 'none' }
                });
        }

        function unblockUi() {
            $.unblockUI();
        }

    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
